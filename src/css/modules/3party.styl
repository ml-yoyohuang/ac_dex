/*
sweetalert 2 組件，用來蓋掉他的 style
*/
.swal2-container
  .swal2-popup
    border-radius: 0
    border-top: 5px solid #b7800a;
  .swal2-actions
    .swal2-styled
      border-radius 0
      border none
      font-size 16px
      line-height 18px
      // padding 13px 50px
      padding 13px 80px
      background-image linear-gradient(#FFA900, #B06400);
      &:focus
        box-shadow none
      &:hover
        background-image linear-gradient(#B06400, #FFA900) !important
        box-shadow inset 0 1px 6px alpha(black, 0.3);