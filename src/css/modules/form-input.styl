// Reset
input.input[type=number]::-webkit-inner-spin-button,
input.input[type=number]::-webkit-outer-spin-button
  -webkit-appearance: none
  margin: 0
input.input[type=number]
  -moz-appearance: textfield
input.input::-ms-clear
  display: none
  width: 0
  height: 0

input.input, textarea.textarea
  width 100%
  display block
  border $form-border-width solid $form-border-color
  padding-left $form-padding
  color $form-color
  &:focus
    border $form-border-width solid $form-focus-border-color
  &.is-error
    border $form-border-width solid $form-error-color
    color $form-error-color
    background-color $form-error-bgcolor
  &+.error-msg
    padding-left $form-padding + $form-border-width
input.input
  height $input-h
  line-height $input-h
textarea.textarea
  padding-top 10px
  max-width 100%
  min-width $input-h
  min-height $input-h
  line-height $form-inner-line-height
::placeholder
  color $form-placeholder-color